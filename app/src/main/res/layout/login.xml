<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bgLogin"
        android:layout_width="match_parent"
        android:layout_height="557dp"
        android:src="@drawable/bgc"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/judulLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/usernameLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judulLogin"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/people_icon"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:inputType="text"
        android:hint="Username"
        android:textColorHint="@color/white"
        android:textColor="@color/white"></EditText>
    <TextView
        android:id="@+id/penanda1"
        android:layout_marginTop="60dp"
        android:layout_below="@id/judulLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/passwordLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/penanda1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:textColor="@color/white"></EditText>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:text="Masuk"/>

    <Button
        android:id="@+id/daftarButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:padding="10dp"
        android:backgroundTint="#EDEBEB"
        android:textColor="#3F51B5"
        android:text="Daftar"/>

    <Button
        android:id="@+id/kembaliLoginButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/daftarButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="#aac6fc"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:padding="10dp"
        android:text="Go to Home?"
        android:textColor="#FFFFFF" />


</RelativeLayout>